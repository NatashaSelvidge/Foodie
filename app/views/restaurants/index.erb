<% @restaurants.each do |rest| %>
<a href="/restaurants/<%= rest.id%>"><img src="<%= rest.image %>" alt="Restaurant Photo" width="200px"> </a>
<h2>Name: <a href="/restaurants/<%= rest.id%>"> <%= rest.name %> </a> </h2>
  <p> Location: <%= rest.location %></p>
  <p> Ratings: <%=rest.ratings %> ⭐️ </p>
  <p> Reviews: <%= rest.reviews %></p>
<% end %>
